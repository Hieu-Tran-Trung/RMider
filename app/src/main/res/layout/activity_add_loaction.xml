<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAdd"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorDefault"
        app:title="Thêm Địa Chỉ"
        app:titleTextColor="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/edtDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:inputType="numberDecimal"
            android:background="@drawable/ic_custom_1"
            android:hint="Thời gian"
            android:textColor="#111"
            tools:ignore="TextFields" />

        <EditText
            android:id="@+id/edtStart"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Địa điểm đi"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_custom_1"
            android:textColor="#111"/>

        <EditText
            android:id="@+id/edtEnd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Địa điểm đến"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_custom_1"
            android:textColor="#111"/>
        <Button
            android:onClick="onClickAddLocal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_custom_2"
            android:text="XÁC NHẬN"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>